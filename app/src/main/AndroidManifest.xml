<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32"
        tools:ignore="ScopedStorage" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CreatePDF"
        tools:targetApi="31">
        <activity
            android:name=".Activity.PdfToImageActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.UnlockPdfActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.LockPdfActivity"
            android:exported="true" />
        <activity
            android:name=".Activity.SplitPdfActivity"
            android:exported="true" />
        <activity
            android:name=".Activity.ImageToPdfActivity"
            android:exported="true" />
        <activity
            android:name=".Activity.HomeActivity"
            android:exported="true">

        </activity>
        <activity
            android:name=".Activity.MergePdfActivity"
            android:exported="true" />
        <activity
            android:name=".Activity.TextToPdfActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>